<div class="container">
  <div class="row text-center padded">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h2>Confirmation d'achat de <%= @order.product_sku %></h2>
      <%= form_tag order_payments_path(@order) do %>
        <article>
          <label class="amount">
            <span><h3>Montant: <%= humanized_money_with_symbol(@order.amount) %></h3></span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-locale="auto"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="Ma Commande"
          data-email="<%= current_user.email %>"
          data-description="Product <%= @order.product_sku %>"
          data-amount="<%= @order.amount_cents %>"
          data-currency="<%= @order.amount.currency %>"
          data-shipping-name="true"
          data-shipping-address="true"
          data-panel-label="Commander"></script>
      <% end %>
    </div>
  </div>
</div>
