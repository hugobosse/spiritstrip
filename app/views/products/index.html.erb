<div class="top padded">
  <h1 class ="text-center">Et si vous offriez Ã  Papa un whisky qui lui ressemble ?</h1>
  <div class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="product">
            <h2 class ="text-center">
              <%= product.title %>
            </h2>
            <%= link_to image_tag(product.image) %>
            <h4>
              <%= humanized_money_with_symbol(product.price) %> - <%= product.name %>, <em><%= product.size.name %></em>
            </h4>
            <p>
              <%= product.description %>
            </p>
            <p>
              <strong>Notes principales :</strong> <%= product.note %>
            </p>
              <%= form_tag orders_path do %>
                <%= hidden_field_tag 'product_id', product.id %>
                <%= submit_tag 'Commander', class: 'btn btn-primary' %>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
